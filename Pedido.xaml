<Window x:Class="Pedidos.Pedido"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tela Pedidos" Height="600" Width="350" Background="LightBlue">
    <Grid>
        <!-- Header -->
        <TextBlock Text="Tela Pedidos" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" FontSize="24"/>

        <!-- Search Bar -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,60,0,0">
            <TextBox Width="150" Height="30" PlaceholderText="pesquisar"/>
            <Button Content="+" Width="30" Height="30" Margin="10,0,0,0" Click="AddProduct_Click"/>
        </StackPanel>

        <!-- Product List -->
        <ListBox Name="ProductList" VerticalAlignment="Top" Margin="20,120,20,100">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" Width="150" VerticalAlignment="Center"/>
                        <Button Content="🖉" Width="30" Height="30" Margin="10,0,0,0" Command="{Binding EditCommand}"/>
                        <Button Content="🗑" Width="30" Height="30" Margin="10,0,0,0" Command="{Binding DeleteCommand}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Navigation Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10">
            <Button Content="←" Width="60" Height="30" Click="PreviousPage_Click"/>
            <Button Content="→" Width="60" Height="30" Margin="20,0,0,0" Click="NextPage_Click"/>
        </StackPanel>
    </Grid>
</Window>
